extends ../layout
block content
	.container
		.row
			.col-md-9.col-md-offset-1
				.well.well-sm
					.row
						.col-md-6
							img.img-rounded.img-responsive(src=crspd.fileUrl, alt='')
						.col-md-6
							h4
								i.glyphicon.glyphicon-envelope
								b
									| &nbsp;
									= crspd.sender
							p= crspd.content
							p= crspd.dateSent
							div
								each t in crspd.tags
									span.label.label-success=t
									| &nbsp;